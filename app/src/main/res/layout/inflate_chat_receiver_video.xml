<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ll_receiver_video"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:padding="5dp"
android:visibility="gone">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/left_bubble_new"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_receiver_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:textColor="@color/Black"/>

<!---->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_receiver_video"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/placeholder"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_receiver_btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/download_img"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_receiver_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/play_video"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/iv_receiver_video_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@xml/progressbar"
            android:visibility="gone"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_horizontal|center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timed_ic"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_receiver_video_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:padding="2dp"
            android:text="02.30 pm"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_time"
            android:textSize="12dp"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>
