<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="70dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <com.datavim.chatapp.utils.RoundedImageView
                android:id="@+id/chat_row_image"
                android:layout_width="@dimen/chatlist_dp_width"
                android:layout_height="@dimen/chatlist_dp_height"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:scaleType="center"
                android:src="@drawable/user_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_row_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:gravity="left|center"
                android:paddingRight="7dp"
                android:text="Raviraj Desai"
                android:textColor="@color/toolbar_text"
                android:singleLine="false"
                android:textAllCaps="false"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/chatlist_msg_name_font_size" />

            <TextView
                android:id="@+id/chat_row_last_msg"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="left|center"
                android:singleLine="true"
                android:visibility="visible"
                android:text="Last Msg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/publish_color_new"
                android:textSize="@dimen/chatlist_msg_text_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.9"
            android:padding="5dp"
            android:gravity="right"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_row_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="12.20 pm"
                android:layout_marginRight="3dp"
                android:gravity="top|left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_filled_color_new"
                android:textSize="@dimen/chatlist_msg_time_font_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chat_row_msg_counter"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/readbadge"
                android:text="10"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White"
                android:textSize="@dimen/chatlist_msg_badge"
                android:textStyle="normal"
                android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>