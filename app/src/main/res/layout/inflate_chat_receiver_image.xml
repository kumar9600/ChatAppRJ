<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_receive_img"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="1dp"
    android:layout_margin="5dp"
    android:visibility="visible">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/left_bubble_new"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_receiver_img_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/Black"/>


    <RelativeLayout
        android:id="@+id/rl_receive_img_progress"
        android:layout_width="wrap_content"
        android:padding="1dp"

        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/iv_recive_img"
            android:layout_width="230dp"
            android:layout_height="195dp"
            android:longClickable="true"
            android:src="@drawable/placeholder"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_receiver_img_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/download_img"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_receiver_img_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play_video"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/pb_reciver_img"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@xml/progressbar"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_receiver_img_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/rl_receive_img_progress"
            android:layout_gravity="right|center_horizontal|center_vertical"
            android:padding="5dp"
            android:gravity="right"
            android:text=" 01:52 am"
            android:textColor="@color/Black"
            android:textSize="10sp"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>
